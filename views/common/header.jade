mixin navbarButton(text, destination)
    li
        a.text-muted(href=destination)=text

nav.navbar.navbar-fixed-top#navigation
    div.container-fluid
        div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navigation-menu")
                span.sr-only="Toggle navigation"
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#")
                img#logo(src="images/tla.png", alt="logo")
        div.collapse.navbar-collapse#navigation-menu
            ul.nav.navbar-nav#links
                +navbarButton("Our Story", "#story")
                +navbarButton("Bride", "#bride")
                +navbarButton("Groom", "#groom")
                li.dropdown
                    a.dropdown-toggle.text-muted(href="", data-toggle="dropdown", aria-expanded="false")
                        Wedding Party
                        span.caret
                    ul.dropdown-menu(role="menu")
                        +navbarButton("Bridesmaids", "#bridesmaids")
                        +navbarButton("Groomsmen", "#groomsmen")
                +navbarButton("Location", "#location")
                +navbarButton("Registrations", "#registrations")
